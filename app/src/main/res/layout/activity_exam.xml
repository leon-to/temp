<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ece496.assignments.Exam">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exam_page_title"
            android:layout_width="412dp"
            android:layout_height="73dp"
            android:layout_marginBottom="53dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="ADD EXAM"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title.Inverse"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/cancel_exam"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="285dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="cancel" />

        <Button
            android:id="@+id/submit_exam"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="285dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="submit" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
